person1 = {first: "Stan", last: "Johnson"}
person2 = {first: "Nancy", last: "Johnson"}
person3 = {first: "Fiona", last: "Johnson"}
params  = {}
params[:father] = person1
params[:mother] = person2
params[:child] = person3



